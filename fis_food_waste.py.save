    else:
        purchases["Purchased"] = pd.to_numeric(purchases["Purchased"], errors="coerce")
        surplus = purchases.groupby("Food")["Purchased"].sum()

        fig, ax = plt.subplots(figsize=(10, 6))
        bars = surplus.plot(kind="bar", ax=ax, color="green")
